@model LibraryManagementSystem.Models.Entities.Book

@{
    ViewData["Title"] = "Edit book";
}

<h2>Edit member</h2>

<form asp-action="EditBook" asp-route-id="@ViewData["MemberID"]" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" placeholder="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Author" class="control-label"></label>
        <input asp-for="Author" class="form-control" placeholder="@Model.Author" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Publisher" class="control-label"></label>
        <input asp-for="Publisher" class="form-control" placeholder="@Model.Publisher" />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="PublishYear" class="control-label"></label>
        <input asp-for="PublishYear" class="form-control" type="date" placeholder="@Model.PublishYear" />
        <span asp-validation-for="PublishYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit changes</button>
    </div>
</form>