@model LibraryManagementSystem.Models.Entities.BorrowingRecord

<h2>Create Borrowing Record</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BookID" value="@Model.BookID" />

    <input type="hidden" asp-for="BorrowDate" value="@DateTime.Now" />

    <div class="form-group">
        <label class="control-label">Book Title</label>
        <input class="form-control" readonly value="@Model.Book.Title" />
    </div>

    <div class="form-group">
        <label asp-for="MemberID" class="control-label">Member ID</label>
        <input asp-for="MemberID" class="form-control" placeholder="Enter Member ID" />
        <span id="memberError" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Borrowing Record</button>
</form>
