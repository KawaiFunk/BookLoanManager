@model LibraryManagementSystem.Models.DTOs.MemberDTO

@{
    ViewData["Title"] = "Edit member";
}

<h2>Edit member</h2>

<form asp-action="Edit" asp-route-id="@ViewData["MemberID"]" method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" placeholder="@Model.LastName"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Birthday" class="control-label"></label>
        <input asp-for="Birthday" class="form-control" type="date" placeholder="@Model.Birthday"/>
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit changes</button>
    </div>
</form>